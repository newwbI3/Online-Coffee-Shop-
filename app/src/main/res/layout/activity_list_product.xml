<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.product.ListProductActivity"
    android:background="@color/lightCream">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Header Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/back" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Back"
                        android:textAlignment="center"
                        android:textColor="@color/darkBrown" />

                </LinearLayout>

                <TextView
                    android:id="@+id/categoryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Products"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/back_btn"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Search Bar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_background"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_search"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/transparent"
                        android:hint="Search products..."
                        android:textSize="14sp"
                        android:textColorHint="@color/grey"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        app:layout_constraintStart_toEndOf="@+id/searchIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/filterBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_filter"
                    android:background="@drawable/white_full_corner_bg"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Filter Section (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/filterSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/white_full_corner_bg"
                android:padding="16dp"
                android:visibility="gone">

                <!-- Sort Options -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Name Sort Options -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/sortNameAscBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="A-Z"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/sortNameDescBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:text="Z-A"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Price Sort Options -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/sortPriceAscBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="Low"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/sortPriceDescBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:text="High"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Rating Sort Options -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/sortRatingAscBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="Low"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/sortRatingDescBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:text="High"
                                    android:textSize="10sp"
                                    android:minWidth="0dp"
                                    android:paddingHorizontal="12dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Clear Button -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <Button
                                android:id="@+id/clearFiltersBtn"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Clear All"
                                android:textSize="11sp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="16dp"
                                android:backgroundTint="@color/orange"
                                android:layout_marginTop="18dp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:alpha="0.3"
                    android:layout_marginVertical="8dp" />

                <!-- View Layout Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Layout Type Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Layout:"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/search_background"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/listViewBtn"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_list_view"
                                android:padding="8dp"
                                android:background="@drawable/filter_button_selector"
                                android:layout_marginEnd="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:contentDescription="List View" />

                            <ImageView
                                android:id="@+id/gridViewBtn"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_grid_view"
                                android:padding="8dp"
                                android:background="@drawable/filter_button_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:contentDescription="Grid View" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Items Per Page Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/itemsPerPageTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items per page:"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="16dp" />

                        <HorizontalScrollView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scrollbars="horizontal"
                            android:fadeScrollbars="false">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/search_background"
                                android:padding="4dp">

                                <Button
                                    android:id="@+id/itemsPerPage6Btn"
                                    android:layout_width="40dp"
                                    android:layout_height="36dp"
                                    android:text="6"
                                    android:textSize="12sp"
                                    android:minWidth="0dp"
                                    android:padding="0dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/itemsPerPage12Btn"
                                    android:layout_width="40dp"
                                    android:layout_height="36dp"
                                    android:text="12"
                                    android:textSize="12sp"
                                    android:minWidth="0dp"
                                    android:padding="0dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/itemsPerPage24Btn"
                                    android:layout_width="40dp"
                                    android:layout_height="36dp"
                                    android:text="24"
                                    android:textSize="12sp"
                                    android:minWidth="0dp"
                                    android:padding="0dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                                <Button
                                    android:id="@+id/itemsPerPage48Btn"
                                    android:layout_width="40dp"
                                    android:layout_height="36dp"
                                    android:text="48"
                                    android:textSize="12sp"
                                    android:minWidth="0dp"
                                    android:padding="0dp"
                                    android:background="@drawable/filter_button_selector"
                                    android:textColor="@color/filter_button_text_selector"
                                    style="@style/Widget.AppCompat.Button.Borderless" />

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Product Count and Results Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/productCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Showing 0 products"
                    android:textSize="14sp"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/pageInfoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Page 1 of 1"
                    android:textSize="14sp"
                    android:textColor="@color/grey" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="20dp"/>

            <!-- Pagination Section -->
            <LinearLayout
                android:id="@+id/paginationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/prevPageBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Previous"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/currentPageTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:minWidth="40dp" />

                <Button
                    android:id="@+id/nextPageBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Next"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Empty State for Search Results -->
            <LinearLayout
                android:id="@+id/emptyStateSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!-- Empty State Icon -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/coffee_svgrepo_com"
                    android:alpha="0.3" />

                <!-- Main Message -->
                <TextView
                    android:id="@+id/tv_empty_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không tìm thấy sản phẩm"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkBrown"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Sub Message -->
                <TextView
                    android:id="@+id/tv_empty_search_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thử tìm kiếm với từ khóa khác"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Action Button -->
                <Button
                    android:id="@+id/btn_browse_all"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả sản phẩm"
                    android:backgroundTint="@color/darkBrown"
                    android:textColor="@color/white"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="@+id/scrollView4"
        app:layout_constraintStart_toStartOf="@+id/scrollView4"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>