<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OnlineCoffeeShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.OnlineCoffeeShop" parent="Base.Theme.OnlineCoffeeShop" />

    <!-- Theme without action bar for authentication activities -->
    <style name="Theme.OnlineCoffeeShop.NoActionBar" parent="Theme.OnlineCoffeeShop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_gradient</item>
        <item name="android:elevation">16dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/CustomBottomNavIndicator</item>
        <item name="itemRippleColor">@color/bottom_nav_ripple</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/HiddenTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/HiddenTextStyle</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <!-- Custom Bottom Navigation Indicator -->
    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_nav_indicator</item>
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
        <item name="shapeAppearance">@style/CustomIndicatorShape</item>
    </style>

    <!-- Custom Indicator Shape -->
    <style name="CustomIndicatorShape" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Hidden Text Style -->
    <style name="HiddenTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>